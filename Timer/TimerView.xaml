<UserControl x:Class="Timer.TimerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:st="clr-namespace:AutoGrid;assembly=SpicyTaco.AutoGrid"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             x:Name="Root"
             d:DesignHeight="100" d:DesignWidth="200">

	<prism:Dialog.WindowStyle>
		<Style TargetType="Window">
			<Setter Property="WindowStyle" Value="None" />
			<Setter Property="AllowsTransparency" Value="True" />
			<Setter Property="Width" Value="200" />
			<Setter Property="Height" Value="100" />
			<Setter Property="ShowInTaskbar" Value="False" />
			<Setter Property="Icon" Value="/Infrastructure;component/SharedResources/images/settings.png" />
		</Style>
	</prism:Dialog.WindowStyle>

	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/Infrastructure;component/SharedResources/ResourceDictionary.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>


	<Border CornerRadius="10" Style="{StaticResource BorderClip}">
		<st:AutoGrid Columns="Auto, *" Rows="Auto, *" Margin="0 0 0 0" Background="{StaticResource MediumBrush}">
			<Viewbox Stretch="Uniform" StretchDirection="DownOnly">
				<Label Content="{Binding Config.Name, FallbackValue=Timer_Name, Mode=TwoWay}"
				       Background="{StaticResource DarkHintBrush}"
				       Foreground="{StaticResource LightBrush}" Style="{StaticResource BaseControlStyle}" />
			</Viewbox>
			<Separator Background="{StaticResource Light2Brush}" />
			<Grid Background="{StaticResource MediumBrush}" st:AutoGrid.ColumnSpan="2">
				<Viewbox HorizontalAlignment="Stretch" Stretch="Fill" StretchDirection="Both" x:Name="TimerViewbox"
				         Grid.ColumnSpan="2">
					<Label Content="00:00" HorizontalContentAlignment="Center" Foreground="{StaticResource LightAccentBrush}"
					       Padding="6, 0" x:Name="TimerText" Style="{StaticResource BigControlStyle}" Margin="0, -4, 0, 0" />
				</Viewbox>
			</Grid>
		</st:AutoGrid>
	</Border>


</UserControl>